<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/default_padding"
    tools:context=".core.MainActivity"
    >
    <androidx.cardview.widget.CardView
        android:id="@+id/simple_text_example"
        android:layout_width="match_parent"
        android:layout_height="@dimen/cardview_height"
        app:cardBackgroundColor="@color/colorPrimary"
        android:padding="@dimen/default_padding"
        android:onClick="startSimpleTextExample"
        app:cardCornerRadius="@dimen/card_corner_radius">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_simple_text_example"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:fontFamily="monospace"
            />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/custom_text_example"
        android:layout_width="match_parent"
        android:layout_height="@dimen/cardview_height"
        app:cardBackgroundColor="@color/colorPrimary"
        android:padding="@dimen/default_padding"
        android:onClick="startCustomTextExample"
        android:layout_marginTop="@dimen/default_padding"
        app:cardCornerRadius="@dimen/card_corner_radius">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_custom_text_example"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:fontFamily="monospace"
            />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/vertical_scrollable_example"
        android:layout_width="match_parent"
        android:layout_height="@dimen/cardview_height"
        app:cardBackgroundColor="@color/colorPrimary"
        android:padding="@dimen/default_padding"
        android:onClick="startVerticalScrollableExample"
        android:layout_marginTop="@dimen/default_padding"
        app:cardCornerRadius="@dimen/card_corner_radius">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_vertical_scrollable_example"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:fontFamily="monospace"
            />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/horizontal_scrollable_example"
        android:layout_width="match_parent"
        android:layout_height="@dimen/cardview_height"
        app:cardBackgroundColor="@color/colorPrimary"
        android:padding="@dimen/default_padding"
        android:onClick="startHorizontalScrollableExample"
        android:layout_marginTop="@dimen/default_padding"
        app:cardCornerRadius="@dimen/card_corner_radius">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_horizontal_scrollable_example"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:fontFamily="monospace"
            />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/load_image_example"
        android:layout_width="match_parent"
        android:layout_height="@dimen/cardview_height"
        app:cardBackgroundColor="@color/colorPrimary"
        android:padding="@dimen/default_padding"
        android:onClick="starLoadImageExample"
        android:layout_marginTop="@dimen/default_padding"
        app:cardCornerRadius="@dimen/card_corner_radius">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_load_image_example"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:fontFamily="monospace"
            />
    </androidx.cardview.widget.CardView>

</LinearLayout>