<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jetpackcomposeplayground">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".core.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".text.SimpleTextActivity"
            android:exported="true"
            android:label="@string/title_activity_compose"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".text.CustomTextActivity"
            android:exported="true"
            android:label="@string/title_activity_custom_text"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".scrollers.VerticalScrollableActivity"
            android:exported="true"
            android:label="@string/title_activity_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".scrollers.HorizontalScrollableActivity"
            android:exported="true"
            android:label="@string/title_activity_horizontal_scrollable"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".scrollers.GridLayoutActivity"
            android:exported="true"
            android:label="@string/title_activity_grid_layout"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".image.ImageActivity"
            android:exported="true"
            android:label="@string/title_activity_image"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".dialogs.AlertDialogActivity"
            android:exported="true"
            android:label="@string/title_activity_clickable"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".drawers.DrawerAppActivity"
            android:exported="true"
            android:label="@string/title_activity_drawer"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".button.ButtonActivity"
            android:exported="true"
            android:label="@string/title_activity_button"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".state.StateActivity"
            android:exported="true"
            android:label="@string/title_activity_state"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".customview.CustomViewActivity"
            android:exported="true"
            android:label="@string/title_custom_view"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".customview.CustomViewPainActivity"
            android:exported="true"
            android:label="@string/title_custom_view_paint"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".text.TextFieldActivity"
            android:exported="true"
            android:label="@string/title_text_input_example"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".stack.StackActivity"
            android:exported="true"
            android:label="@string/title_stack_example"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".text.ViewLayoutConfigurationsActivity"
            android:exported="true"
            android:label="@string/title_view_arrangement_example"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".material.MaterialActivity"
            android:exported="true"
            android:label="@string/title_material_example"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>